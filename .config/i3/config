#--------------------ARROW-KEYS--------------------------------------------------------------------#
bindsym $mod+Left			focus left
bindsym $mod+Shift+Left			move left 10
bindsym $mod+h				focus left
bindsym $mod+Shift+h			move left 100

bindsym $mod+Down			focus down
bindsym $mod+Shift+Down			move down 10
bindsym $mod+j				focus down
bindsym $mod+Shift+j			move down 100

bindsym $mod+Up				focus up
bindsym $mod+Shift+Up			move up 10
bindsym $mod+k				focus up
bindsym $mod+Shift+k			move up 100

bindsym $mod+Right			focus right
bindsym $mod+Shift+Right		move right 10
bindsym $mod+l				focus right
bindsym $mod+Shift+l			move right 100

#--------------------MEDIA-KEYS--------------------------------------------------------------------#
bindsym XF86AudioMute			exec --no-startup-id pactl set-sink-mute 0 toggle; exec pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume		exec --no-startup-id pactl set-sink-volume 0 -5%; exec pkill -RTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume		exec --no-startup-id pactl set-sink-volume 0 +5%; exec pkill -RTMIN+10 i3blocks
bindsym XF86AudioPrev			exec --no-startup-id mpc prev
bindcode 172				exec --no-startup-id mpc toggle
bindsym XF86AudioNext			exec --no-startup-id mpc next
bindsym XF86MonBrightnessDown		exec --no-startup-id xbacklight -dec 10
bindsym Shift+XF86MonBrightnessDown	exec --no-startup-id xbacklight -set 50
bindsym XF86MonBrightnessUp		exec --no-startup-id xbacklight -inc 10
bindsym Shift+XF86MonBrightnessUp	exec --no-startup-id xbacklight -set 100

